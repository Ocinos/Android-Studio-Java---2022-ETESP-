<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pergunta10">

    <ImageView
        android:id="@+id/ImgPurpura"
        android:layout_width="157dp"
        android:layout_height="161dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.257"
        app:srcCompat="@drawable/potofgreed" />

    <TextView
        android:id="@+id/LblPergunta10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qual o nome completo do Dragão Purpura?"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />

    <Button
        android:id="@+id/BtnPeg10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Próximo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.918" />

    <RadioGroup
        android:layout_width="410dp"
        android:layout_height="238dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.685" >

        <RadioButton
            android:id="@+id/RdoPurpura1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dragão Interplanetariopurpuraespinhoso" />

        <RadioButton
            android:id="@+id/RdoPurpura2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dragão Purpura da Aniquilação" />

        <RadioButton
            android:id="@+id/RdoPurpura3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dragão Eclipsepurpuraespinhosodastrevas" />

        <RadioButton
            android:id="@+id/RdoPurpura4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dragão Demoníacopurpuraespinhosodosubmundo" />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>